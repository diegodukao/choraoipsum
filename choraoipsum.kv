#: import NavigationDrawer kivy.garden.navigationdrawer.NavigationDrawer
#: import AndroidTabs kivy.garden.androidtabs.AndroidTabs


NavigationDrawer:
    side_panel: _side_panel
    main_panel: _main_panel


    SidePanel:
        id: _side_panel


    MainPanel:
        id: _main_panel



<SidePanel@BoxLayout>:
    menu_image: _menu_image

    BoxLayout:
        orientation: "vertical"

        Label:
            text: "Menu"
            size_hint_y: 1
        BoxLayout:
            size_hint_y: 2
            orientation: "vertical"

            Button:
                text: "TCHAROLADRÃO!!"
                on_press: root.menu_image.source = "chorao3.jpg"
            Button:
                text: "putzpuputz-CHARLIE!"
                on_press: root.menu_image.source = "chorao.jpg"
            Button:
                text: "pupuputzpz-BROWN!"
                on_press: root.menu_image.source = "chorao2.jpg"

        Image:
            id: _menu_image
            source: "chorao2.jpg"
            size_hint_y: 7


<MainPanel@BoxLayout>:
    orientation: 'vertical'
    form: _form
    body: _body

    ActionBar:
        ActionView:
            ActionPrevious:
                title: 'Chorao Ipsum'
                on_press: app.root.toggle_state()

    BoxLayout:
        orientation: 'vertical'

        Form:
            id: _form
            size_hint_y: 1
        Body:
            id: _body
            size_hint_y: 4
            width: root.width


<Form@BoxLayout>:
    qt_words: _qt_words_input
    orientation: "vertical"

    Label:
        text: "Eu não sei fazer poesia"
    BoxLayout:
        TextInput:
            id: _qt_words_input
            font_size: 60
        Button:
            id: _ok_button
            text: "Skate!"
            on_press: app.generate(root.qt_words.text)


<Body@ScrollView>:
    ipsumarea: _ipsumarea

    Label:
        id: _ipsumarea
        text: ""
        size_hint_y: None
        height: self.texture_size[1]
        text_size: self.width, None

