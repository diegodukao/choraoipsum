BoxLayout:
    orientation: 'vertical'
    form: _form
    body: _body

    ActionBar:
        ActionView:
            ActionPrevious:
                title: 'Chorao Ipsum'

    BoxLayout:
        orientation: 'vertical'

        Form:
            id: _form
            size_hint_y: 1
        Body:
            id: _body
            size_hint_y: 4


<Form@BoxLayout>:
    qt_words: _qt_words_input

    Label:
        text: "Quantas palavras?"
    TextInput:
        id: _qt_words_input
    Button:
        id: _ok_button
        text: "Skate!"
        on_press: app.generate(root.qt_words.text)


<Body@Label>:
    text: ""
