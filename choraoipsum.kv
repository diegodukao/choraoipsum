BoxLayout:
    orientation: 'vertical'
    form: _form
    body: _body

    ActionBar:
        ActionView:
            ActionPrevious:
                title: 'Chorao Ipsum'

    BoxLayout:
        orientation: 'vertical'

        Form:
            id: _form
            size_hint_y: 1
        Body:
            id: _body
            size_hint_y: 4
            width: root.width


<Form@BoxLayout>:
    qt_words: _qt_words_input
    orientation: "vertical"

    Label:
        text: "Eu n√£o sei fazer poesia"
    BoxLayout:
        TextInput:
            id: _qt_words_input
            font_size: 60
        Button:
            id: _ok_button
            text: "Skate!"
            on_press: app.generate(root.qt_words.text)


<Body@ScrollView>:
    ipsumarea: _ipsumarea

    Label:
        id: _ipsumarea
        text: ""
        size_hint_y: None
        height: self.texture_size[1]
        text_size: self.width, None
